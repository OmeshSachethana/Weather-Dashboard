---
import Layout from '../layouts/Layout.astro';
import WeatherSearch from '../components/WeatherSearch.astro';
import CurrentWeather from '../components/CurrentWeather.astro';
import WeatherForecast from '../components/WeatherForecast.astro';
import WeatherStats from '../components/WeatherStats.astro';
import { getCurrentWeather, getForecast } from '../utils/weatherAPI';

// Default location
const defaultLocation = 'Sri Lanka';
let weatherData = null;
let forecastData = null;
let error = null;
let isLoading = false;
let currentLocation = defaultLocation;

// Fetch initial weather data
try {
  [weatherData, forecastData] = await Promise.all([
    getCurrentWeather(defaultLocation),
    getForecast(defaultLocation)
  ]);
} catch (err) {
  error = err.message;
}

// Handle search
const handleSearch = async (location) => {
  if (!location.trim()) return;
  
  isLoading = true;
  currentLocation = location;
  
  try {
    [weatherData, forecastData] = await Promise.all([
      getCurrentWeather(location),
      getForecast(location)
    ]);
    error = null;
  } catch (err) {
    error = err.message;
    weatherData = null;
    forecastData = null;
  }
  
  isLoading = false;
};
---

<Layout>
  <div class="min-h-screen bg-gradient-to-br from-orange-50 via-amber-50 to-orange-100 
              dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 
              transition-colors duration-300">
    <!-- Header -->
    <header class="pt-8 pb-6 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="flex flex-col md:flex-row items-center justify-between gap-6">
          <div class="text-center md:text-left">
            <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-orange-600 
                       to-amber-600 bg-clip-text text-transparent dark:from-orange-400 
                       dark:to-amber-400">
              <i class="fas fa-sun text-orange-500 mr-3"></i>
              Weather Dashboard
            </h1>
            <p class="text-gray-600 dark:text-gray-400 mt-2">
              Real-time weather information with beautiful visualization
            </p>
          </div>
          
          <div class="flex items-center gap-4">
            <div class="relative">
              <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-amber-500 
                         rounded-full flex items-center justify-center shadow-lg">
                <i class="fas fa-cloud-sun text-white text-xl"></i>
              </div>
              <div class="absolute -top-1 -right-1 w-5 h-5 bg-green-500 
                         rounded-full border-2 border-white"></div>
            </div>
            <div class="hidden md:block">
              <div class="text-sm text-gray-500 dark:text-gray-400">Last Updated</div>
              <div class="font-semibold text-gray-800 dark:text-white">
                {new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="px-4 pb-12">
      <div class="max-w-7xl mx-auto">
        <!-- Search Component -->
        <section class="mb-8">
          <WeatherSearch 
            onSearch={handleSearch} 
            defaultLocation={currentLocation}
          />
        </section>

        <!-- Loading State -->
        {isLoading && (
          <div class="flex flex-col items-center justify-center py-20">
            <div class="w-16 h-16 border-4 border-orange-200 border-t-orange-500 
                       rounded-full animate-spin mb-4"></div>
            <p class="text-gray-600 dark:text-gray-400">
              Loading weather data...
            </p>
          </div>
        )}

        <!-- Error State -->
        {error && !isLoading && (
          <div class="bg-gradient-to-r from-red-500/10 to-red-600/10 backdrop-blur-lg 
                     rounded-3xl p-8 mb-8 border border-red-200 dark:border-red-800/30">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-gradient-to-r from-red-500 to-pink-500 
                         rounded-full flex items-center justify-center">
                <i class="fas fa-exclamation-triangle text-white text-xl"></i>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-800 dark:text-white">
                  Error Loading Weather Data
                </h3>
                <p class="text-gray-600 dark:text-gray-400 mt-1">
                  {error}. Please try another city.
                </p>
              </div>
            </div>
          </div>
        )}

        <!-- Weather Data -->
        {!isLoading && !error && weatherData && (
          <>
            <!-- Current Weather -->
            <section class="mb-8">
              <CurrentWeather weatherData={weatherData} />
            </section>

            <!-- Stats -->
            <section class="mb-8">
              <WeatherStats weatherData={weatherData} />
            </section>

            <!-- Forecast -->
            <section>
              <WeatherForecast forecastData={forecastData} />
            </section>
          </>
        )}

        <!-- Footer -->
        <footer class="mt-12 pt-8 border-t border-orange-200 dark:border-orange-800/30">
          <div class="text-center text-gray-500 dark:text-gray-400">
            <p>
              <i class="fas fa-database text-orange-500 mr-2"></i>
              Powered by OpenWeather API
            </p>
            <p class="text-sm mt-2">
              Data updates every 10 minutes â€¢ Last fetch: {new Date().toLocaleString()}
            </p>
            <div class="mt-4 flex justify-center gap-4">
              <a href="#" class="text-orange-500 hover:text-orange-600 transition-colors">
                <i class="fab fa-github text-xl"></i>
              </a>
              <a href="#" class="text-orange-500 hover:text-orange-600 transition-colors">
                <i class="fas fa-question-circle text-xl"></i>
              </a>
              <button 
                onclick="localStorage.theme = localStorage.theme === 'dark' ? 'light' : 'dark'; 
                        document.documentElement.classList.toggle('dark')"
                class="text-orange-500 hover:text-orange-600 transition-colors"
              >
                <i class="fas fa-moon text-xl"></i>
              </button>
            </div>
          </div>
        </footer>
      </div>
    </main>
  </div>

  <!-- Additional Scripts -->
  <script>
    // Auto-refresh weather data every 10 minutes
    setInterval(() => {
      const searchButton = document.querySelector('.weather-search button');
      if (searchButton) {
        const input = document.getElementById('search-input');
        if (input && input.value) {
          searchButton.click();
        }
      }
    }, 600000); // 10 minutes
  </script>
</Layout>

<style>
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }
  
  ::-webkit-scrollbar-track {
    background: rgba(249, 115, 22, 0.1);
  }
  
  ::-webkit-scrollbar-thumb {
    background: linear-gradient(to bottom, #f97316, #f59e0b);
    border-radius: 5px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(to bottom, #ea580c, #d97706);
  }
  
  /* Smooth transitions */
  * {
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }
</style>