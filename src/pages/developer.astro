<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Developer Profile</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --bg-dark: #0b0b1e;
      --bg-card: rgba(255,255,255,0.08);
      --primary: #8b5cf6;
      --secondary: #22d3ee;
      --text-main: #ffffff;
      --text-muted: #b7b7d6;
      --radius: 18px;
    }

    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background: radial-gradient(circle at top, #1a1a3a, var(--bg-dark));
      color: var(--text-main);
      line-height: 1.7;
    }

    section {
      padding: 4rem 1.5rem;
    }

    @media (min-width: 768px) {
      section {
        padding: 6rem 2rem;
      }
    }

    .container {
      max-width: 1200px;
      margin: auto;
      padding: 0 1rem;
    }

    /* HERO */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      text-align: center;
    }

    .hero h1 {
      font-size: clamp(2.5rem, 5vw, 5rem);
      font-weight: 800;
      background: linear-gradient(90deg, var(--primary), var(--secondary));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .hero h2 {
      font-size: 1.25rem;
      margin-top: 1rem;
      color: var(--text-muted);
    }

    .hero p {
      max-width: 820px;
      margin: 2rem auto;
      font-size: 1.15rem;
      padding: 0 1rem;
    }

    /* CARD */
    .card {
      background: var(--bg-card);
      backdrop-filter: blur(14px);
      border-radius: var(--radius);
      padding: 2rem;
      border: 1px solid rgba(255,255,255,0.15);
      transition: transform 0.3s ease;
    }

    @media (min-width: 768px) {
      .card {
        padding: 2.5rem;
      }
    }

    .card:hover {
      transform: translateY(-8px);
    }

    /* GRID */
    .grid {
      display: grid;
      gap: 2rem;
    }

    @media (min-width: 768px) {
      .grid {
        gap: 2.5rem;
      }
    }

    .grid-3 {
      grid-template-columns: 1fr;
    }

    @media (min-width: 768px) {
      .grid-3 {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    /* TITLES */
    .section-title {
      font-size: 2rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    @media (min-width: 768px) {
      .section-title {
        font-size: 2.4rem;
        margin-bottom: 2.5rem;
      }
    }

    .section-sub {
      text-align: center;
      max-width: 700px;
      margin: 0 auto 3rem;
      color: var(--text-muted);
      padding: 0 1rem;
    }

    /* SKILLS */
    .skill {
      margin-bottom: 1.5rem;
    }

    .skill span {
      display: flex;
      justify-content: space-between;
      font-size: 0.95rem;
    }

    .bar {
      height: 10px;
      border-radius: 20px;
      background: rgba(255,255,255,0.15);
      overflow: hidden;
      margin-top: 0.5rem;
    }

    .bar div {
      height: 100%;
      background: linear-gradient(90deg, var(--primary), var(--secondary));
    }

    /* STATS */
    .stats {
      text-align: center;
    }

    .stats h3 {
      font-size: 2.5rem;
      color: var(--secondary);
    }

    @media (min-width: 768px) {
      .stats h3 {
        font-size: 3rem;
      }
    }

    .stats p {
      color: var(--text-muted);
    }

    /* TIMELINE - RESPONSIVE FIX */
    .timeline {
      position: relative;
      margin-top: 3rem;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Vertical line for desktop */
    @media (min-width: 768px) {
      .timeline::before {
        content: "";
        position: absolute;
        left: 50%;
        top: 0;
        bottom: 0;
        width: 2px;
        background: rgba(255,255,255,0.2);
        transform: translateX(-50%);
      }
    }

    .timeline-item {
      width: 100%;
      padding: 1rem 0;
      position: relative;
      margin-bottom: 1.5rem;
    }

    @media (min-width: 768px) {
      .timeline-item {
        width: 50%;
        padding: 2rem;
        margin-bottom: 0;
      }
      
      .timeline-item:nth-child(odd) {
        left: 0;
        text-align: right;
        padding-right: 3rem;
      }
      
      .timeline-item:nth-child(even) {
        left: 50%;
        padding-left: 3rem;
      }
    }

    /* Timeline dots */
    .timeline-item::after {
      content: "";
      position: absolute;
      width: 14px;
      height: 14px;
      background: var(--primary);
      border-radius: 50%;
      top: 50%;
      transform: translateY(-50%);
    }

    /* Mobile timeline line and dots */
    @media (max-width: 767px) {
      .timeline {
        padding-left: 2rem;
      }
      
      .timeline::before {
        content: "";
        position: absolute;
        left: 7px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: rgba(255,255,255,0.2);
      }
      
      .timeline-item::after {
        left: -2.5rem;
        top: 2.5rem;
        transform: none;
      }
    }

    /* Desktop timeline dots positioning */
    @media (min-width: 768px) {
      .timeline-item::after {
        top: 50%;
        transform: translateY(-50%);
      }
      
      .timeline-item:nth-child(odd)::after {
        right: -7px;
      }
      
      .timeline-item:nth-child(even)::after {
        left: -7px;
      }
    }

    /* CONTACT / SOCIALS */
    .socials {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-top: 3rem;
      flex-wrap: wrap;
    }

    @media (min-width: 768px) {
      .socials {
        gap: 3rem;
      }
    }

    .social {
      font-size: 1rem;
      padding: 1.2rem 1.8rem;
      border-radius: 50px;
      background: var(--bg-card);
      border: 1px solid rgba(255,255,255,0.15);
      display: flex;
      align-items: center;
      gap: 0.8rem;
      text-decoration: none;
      color: var(--text-main);
      transition: all 0.3s ease;
    }

    @media (min-width: 768px) {
      .social {
        font-size: 1.1rem;
        padding: 1.4rem 2.2rem;
      }
    }

    .social:hover {
      transform: translateY(-6px);
      box-shadow: 0 0 30px rgba(139,92,246,0.45);
    }

    .social svg {
      width: 20px;
      height: 20px;
      fill: currentColor;
    }

    @media (min-width: 768px) {
      .social svg {
        width: 22px;
        height: 22px;
      }
    }

    footer {
      padding: 3rem;
      text-align: center;
      color: var(--text-muted);
      border-top: 1px solid rgba(255,255,255,0.1);
    }
  </style>
</head>

